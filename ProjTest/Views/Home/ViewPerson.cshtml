@model ProjTest.Models.ViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Изменение записи</title>
</head>
<body>
    <div>
        <h3>Информация о контакте</h3>
        <form method="get" action="~/Home/Change/@Model.Person.Id">

            <table>
                <tr>
                    <td>Фамилия</td>
                    <td>@Model.Person.Surname</td>
                </tr>
                <tr>
                    <td>Имя</td>
                    <td>@Model.Person.Name</td>
                </tr>
                <tr>
                    <td>Отчество</td>
                    <td>@Model.Person.PatrName</td>
                </tr>
                <tr>
                    <td>Дата рождения</td>
                    <td>@Model.Person.BirthDay.ToString("d")</td>
                </tr>
                <tr>
                    <td>Организация</td>
                    <td>@Model.Person.Organization</td>
                </tr>
                <tr>
                    <td>Должность</td>
                    <td>@Model.Person.Position</td>
                </tr>
                <tr>
                    <td>Телефон</td>
                    @if (Model.Phone != null)
                    {
                        @foreach (var phone in @Model.Phone)
                        {
                            <td>@phone</td>
                        }
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr>
                    <td>Email</td>
                    @if (Model.Email != null)
                    {
                        @foreach (var email in @Model.Email)
                        {
                            <td>@email</td>
                        }
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr>
                    <td>Skype</td>
                    @if (Model.Skype != null)
                    {
                        @foreach (var skype in @Model.Skype)
                        {
                            <td>@skype</td>
                        }
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr>
                    <td>Дополнительная информация</td>
                    @if (Model.Other != null)
                    {
                        @foreach (var add in @Model.Other)
                        {
                            <td>@add</td>
                        }
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr><td><input type="submit" value="Изменить" /></td><td></td></tr>
            </table>
        </form>
        <form action="~/Home/Index">
            <input type="submit" value="Назад" />
        </form>
    </div>



</body>
</html>
