@model ProjTest.Models.Person
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Добавление записи</title>
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/css/site.css")" />
    
    <script src="~/lib/jquery/dist/jquery.js"></script>
    
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    
    <script src="@Url.Content("~/js/site.js")" type="text/javascript"></script>
   
    <script type="text/javascript">
        var change = new AddRemove(0, 0, 0, 0);
    </script>



</head>
<body>
    <div>
        <h3>Форма добавления записи</h3>
        <p>Для добавления записи заполните поля:</p>
        <form method="post">

            <table>
                <tr>
                    <td>Фамилия</td>
                    <td><input type="text" name="Surname" asp-for="Surname" placeholder="Иванов" /><span asp-validation-for="Surname" ></span></td>
                </tr>
                <tr>
                    <td>Имя</td>
                    <td><input type="text" name="Name" asp-for="Name" placeholder="Иван" /><span asp-validation-for="Name" ></span></td>
                </tr>
                <tr>
                    <td>Отчество</td>
                    <td><input type="text" name="PatrName" asp-for="PatrName" placeholder="Иванович" /><span asp-validation-for="PatrName" ></span></td>
                </tr>
                <tr>
                    <td>Дата рождения</td>
                    <td><input type="text" name="BirthDay" asp-for="BirthDay" placeholder="19/12/1999" /><span asp-validation-for="BirthDay" ></span></td>
                </tr>
                <tr>
                    <td>Организация</td>
                    <td><input type="text" name="Organization" asp-for="Organization" placeholder="Компания" /><span asp-validation-for="Organization" ></span></td>
                </tr>
                <tr>
                    <td>Должность</td>
                    <td><input type="text" name="Position" asp-for="Position" placeholder="Должность" /><span asp-validation-for="Position" ></span></td>
                </tr>
                <tr><td>Телефон</td></tr>
                <tr id="Phone">                   
                    <td id="phone 0"><input type="text" name="Phone[0].PhoneNumber" asp-for="Phone" size="30" placeholder="90-90-90 или 8-909-000-00-00" /></td>
                 </tr>
                <tr><td><span asp-validation-for="Phone" ></span></td></tr>
                <tr>
                    <td><input type="button" onclick="change.dynamicElement('Phone')" value="+" /><input type="button" onClick="change.remove('Phone')" value="-"></td>
                </tr>
                <tr><td>Email</td></tr>
                <tr id="Email">                   
                    <td id="email 0"><input type="text" name="Email[0].EmailAddres" asp-for="Email" placeholder="one@gmail.com"/></td>
                </tr>
                <tr><td><span asp-validation-for="Email" ></span></td></tr>
                <tr>
                    <td><input type="button" onclick="change.dynamicElement('Email')" value="+" /><input type="button" onClick="change.remove('Email')" value="-"></td>
                </tr>
                <tr><td>Skype</td></tr>
                <tr id="Skype">                  
                        <td id="skype 0"><input type="text" name="Skype[0].SkypeLogin"  asp-for="Skype" size="30" placeholder="Максимальная длина 30 символов" /></td>
                </tr>
                <tr><td><span asp-validation-for="Skype" ></span></td></tr>
                <tr>
                    <td><input type="button" onclick="change.dynamicElement('Skype')" value="+" /><input type="button" onClick="change.remove('Skype')" value="-"></td>
                </tr>
                <tr><td>Дополнительная информация</td></tr>
                <tr id="Addinf">
                    <td id="addinf 0"><input type="text" name="Addinf[0].AdditionalInfo"  placeholder="Максимальная длина 100 символов"  size="30" asp-for="Addinf" /></td>
                </tr>
                <tr><td><span asp-validation-for="Addinf" ></span></td></tr>
                <tr>
                    <td><input type="button" onclick="change.dynamicElement('Addinf')" value="+" /><input type="button" onClick="change.remove('Addinf')" value="-"></td>
                </tr>
                <tr><td><input type="submit" value="Сохранить" /></td><td></td></tr>
            </table>
        </form>
        <form action="~/Home/Index">
            <input type="submit" value="Назад" />
        </form>
    </div>



</body>
</html>